<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="snacker.puzzlesolver">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="snacker.puzzlesolver.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="snacker.puzzlesolver.SudokuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="snacker.puzzlesolver.NonoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="snacker.puzzlesolver.KakuroActivity"
            android:screenOrientation="portrait" />
        <activity android:name="snacker.puzzlesolver.Puzzlelist"></activity>
    </application>

</manifest>